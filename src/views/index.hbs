<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Contactos</h1>
        </div>
        <div class="card-body">
            
            {{#if contactos}}
                 <ul class="list-group">
                    {{#each contactos}}

                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{firstname}}
                            {{lastname}}    /
                            {{email}}   /
                            {{phone}}
                            <a href="/delete-contactos/{{@key}}" class="btn btn-danger">
                                DELETE
                            </a>
                            <a href="/edit-contactos/{{@key}}" class="btn btn-danger">EDIT</a>
                        </li>

                    {{/each}}    
                 </ul>
                
                {{else}}
                <p>No hay contactos.</p>
                {{/if}}

        </div>
        <div class="card-footer">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="First Name" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Last Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="email" placeholder="Email" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="phone" placeholder="Phone Number" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">
                    Save
                </button>
                <a href="../views/layouts/login.hbs" class="btn btn-primary btn-block">Cancel</a>
            </form>
        </div>
    </div>
</div>